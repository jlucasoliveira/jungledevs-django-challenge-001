# https://editorconfig.org/

root = true

[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

[*.py]
max_line_length = 119
insert_final_newline = true

[*.html]
indent_size = 2

[*.json]
indent_size = 2
insert_final_newline = ignore

[**/admin/js/vendor/**]
indent_style = ignore
indent_size = ignore

[**.min.js]
indent_style = ignore
insert_final_newline = ignore

[docs/**.txt]
max_line_length = 79

[*.yml|*.yaml]
indent_size = 2